	<action-group>
		<sql dbms="mysql"><![CDATA[CREATE TABLE phpbb_find (
	feed_id smallint(4) unsigned NOT NULL auto_increment,
	feed_url varchar(255) character set utf8 collate utf8_bin NOT NULL,
	feed_state tinyint(1) unsigned NOT NULL default '1',
	post_forum mediumint(8) unsigned NOT NULL default '0',
	bot_id mediumint(8) unsigned NOT NULL default '0',
	last_update int(11) unsigned NOT NULL default '0',
	feed_name varchar(255) character set utf8 collate utf8_unicode_ci NOT NULL,
	feed_name_subject tinyint(1) unsigned NOT NULL default '0',
	post_mode tinyint(2) unsigned NOT NULL default '1',
	max_articles tinyint(2) unsigned NOT NULL default '10',
	max_contents smallint(3) unsigned NOT NULL default '0',
	feed_info tinyint(1) unsigned NOT NULL default '1',
	article_cat tinyint(1) unsigned NOT NULL default '1',
	article_html tinyint(1) unsigned NOT NULL default '1',
	feed_filters longtext character set utf8 collate utf8_unicode_ci default NULL,
	PRIMARY KEY (feed_id),
	KEY post_forum (post_forum)
);]]></sql>

